= bootstrap_form_for @post, url: admin_post_path(@post), layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-9', method: :patch do |f|
  = f.text_field :title, placeholder: 'Title'
  = f.text_area :body, label: 'Content', placeholder: 'Content', value: @post.body.gsub('<br />', '&#013;&#010;').html_safe, style: 'height: 400px'
  = f.submit 'Update Post', class: 'btn btn-primary pull-right'
= button_to 'Delete Post', admin_post_path(@post), method: :delete, class: 'btn btn-default pull-left'
